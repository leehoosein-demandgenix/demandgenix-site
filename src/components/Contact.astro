---
import { getContact } from '../lib/sanity.js';

let contact;
try {
  contact = await getContact();
} catch (error) {
  console.error('Error fetching contact:', error);
  contact = {
    title: "Ready to scale your demand gen?",
    description: "Let's figure out what's holding you back and build a plan that scales with your business.",
    ctaText: "Book Your Free Diagnostic Call",
    email: "hello@demandgenix.uk",
    phone: "+44 (0) XXX XXX XXXX"
  };
}
---

<section id="contact" class="bg-gradient-to-br from-gray-50 to-white py-16 relative overflow-hidden section-divider">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
      {contact.title}
    </h2>
    <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
      {contact.description}
    </p>
    
    <div class="mb-8">
      <a href="/contact/"
         class="bg-secondary-600 text-white px-8 py-4 rounded-lg text-lg hover:bg-secondary-500 transition-colors inline-block">
        Get in touch
      </a>
    </div>
    
    <div class="border-t border-gray-200 pt-8">
      <div class="grid md:grid-cols-2 gap-6 text-center">
        <div>
          <div class="font-semibold text-gray-900">Email</div>
          <div class="text-gray-600">{contact.email}</div>
        </div>
        <!--<div>
          <div class="font-semibold text-gray-900">Phone</div>
          <div class="text-gray-600">{contact.phone}</div>
        </div> -->
        <div>
          <div class="font-semibold text-gray-900">Location</div>
          <div class="text-gray-600">Manchester, UK</div>
        </div>
      </div>
    </div>
  </div>
</section>
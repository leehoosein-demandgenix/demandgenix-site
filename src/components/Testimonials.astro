---
import { getTestimonials } from '../lib/sanity.js';
import { optimizeSanityImage } from '../lib/imageHelpers.js';

let testimonials;
try {
  testimonials = await getTestimonials();
  
  // Filter out testimonials with missing required fields
  testimonials = testimonials.filter(t => 
    t.recommendation && 
    (t.isPublic !== false)
  );
} catch (error) {
  console.error('Error fetching testimonials:', error);
  testimonials = [];
}
---

{testimonials && testimonials.length > 0 && (
  <section class="py-16 bg-gray-50 section-divider">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-4">What colleagues and collaborators say</h2>
      <p class="text-center text-gray-600 mb-2">LinkedIn recommendations from people I've worked with</p>
      <p class="text-center text-sm text-gray-500 italic mb-12">Client case studies coming Q2 2026...</p>
      
      <div class="grid md:grid-cols-3 lg:grid-cols-3 gap-8">
        {testimonials.map((testimonial) => (
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <div class="flex items-center mb-4">
              {testimonial.profilePhoto ? (
                <img 
                  src={optimizeSanityImage(testimonial.profilePhoto, { 
                    width: 96, 
                    height: 96, 
                    fit: 'crop' 
                  })}
                  alt={testimonial.name || 'Recommender'} 
                  width="96"
                  height="96"
                  loading="lazy"
                  decoding="async"
                  class="w-12 h-12 rounded-full mr-4 object-cover"
                />
              ) : (
                <div class="w-12 h-12 rounded-full mr-4 bg-gray-200 flex items-center justify-center">
                  <span class="text-gray-500 font-medium">
                    {testimonial.name?.charAt(0) || 'A'}
                  </span>
                </div>
              )}
              <div>
                <h4 class="font-semibold text-gray-900">
                  {testimonial.name || 'Anonymous'}
                </h4>
                <p class="text-sm text-gray-600">
                  {testimonial.title ? `${testimonial.title}${testimonial.company ? ` at ${testimonial.company}` : ''}` : 'LinkedIn Connection'}
                </p>
              </div>
            </div>
            <p class="text-gray-700 text-sm leading-relaxed mb-4">
              "{testimonial.recommendation}"
            </p>
            <div class="flex items-center justify-between">
              <div class="flex items-center text-xs text-gray-500">
                <svg class="w-4 h-4 mr-1 text-blue-600" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                <span>LinkedIn Recommendation</span>
              </div>
              {testimonial.linkedinUrl && (
                <a 
                  href={testimonial.linkedinUrl} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-primary-600 hover:text-primary-700 text-xs font-medium"
                >
                  View Profile â†’
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
)}

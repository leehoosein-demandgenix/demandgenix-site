---
// src/components/ImageHandler.astro
import { Image } from 'astro:assets';

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
  quality?: number;
  format?: 'webp' | 'avif' | 'png' | 'jpg';
}

const { 
  src, 
  alt, 
  width = 800,
  height,
  class: className = '',
  loading = 'lazy',
  quality = 80,
  format = 'webp'
} = Astro.props;

// Check if it's an external URL (Sanity, etc.)
const isExternal = src.startsWith('http') || src.startsWith('//');
---

{isExternal ? (
  <!-- For external images like Sanity CMS -->
  <img
    src={src}
    alt={alt}
    width={width}
    height={height}
    class={className}
    loading={loading}
    decoding="async"
  />
) : (
  <!-- For local images - Astro will optimize these -->
  <img
    src={src}
    alt={alt}
    width={width}
    height={height}
    class={className}
    loading={loading}
    decoding="async"
  />
)}
```


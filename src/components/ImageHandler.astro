---
// ImageHandler.astro - Responsive image component
import { Image } from 'astro:assets';

export interface Props {
  src: string;
  alt: string;
  class?: string;
}

const { src, alt, class: className } = Astro.props;
---

<Image
  src={src}
  alt={alt}
  class={className}
  widths={[320, 640, 768, 1024, 1280, 1920]}
  sizes="(max-width: 320px) 320px, (max-width: 640px) 640px, (max-width: 768px) 768px, (max-width: 1024px) 1024px, (max-width: 1280px) 1280px, 1920px"
  format="webp"
  quality={80}
  loading="lazy"
  decoding="async"
/>

<!-- Usage in your pages:
<ImageHandler 
  src="/path/to/your/image.jpg" 
  alt="Description" 
  class="responsive-image"
/>
-->
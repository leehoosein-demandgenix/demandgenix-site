    <div class="text-center mb-4">
      <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">
        Trusted by teams at
      </p>
    </div>
    
    <!-- Single row, centered logos with minimal spacing -->
    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12 max-w-4xl mx-auto">
      
      <!-- Logo 1 -->
      <div class="trust-logo-wrapper">
        <Image 
          src="/logos/company1.png" 
          alt="Company 1"
          width={120}
          height={45}
          class="trust-logo-img"
          format="webp"

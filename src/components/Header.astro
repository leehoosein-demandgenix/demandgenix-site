<header class="bg-green shadow-sm sticky top-0 z-50 backdrop-blur-sm bg-opacity-95">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <a href="/" class="text-xl font-weight-300 text-white">
          DemandGenix
        </a>
      </div>
      <nav class="hidden md:flex space-x-8">
        <a href="/programmes/" class="text-white hover:text-gray-900 transition-colors">Programmes</a>
        <a href="/#about" class="text-white hover:text-gray-900 transition-colors">About</a>
        <a href="/blog/" class="text-gray-100 hover:text-white transition-colors">Blog</a>
        <a href="/contact/" class="text-white hover:text-gray-900 transition-colors">Contact</a>
      </nav>
      <div class="hidden md:block">
        <a href="/contact/" class="bg-secondary-600 text-white px-4 py-2 rounded-lg hover:bg-secondary-500 transition-colors">
          Book a Call
        </a>
      </div>
      <!-- Hamburger button (mobile only) -->
      <button
        id="mobile-menu-btn"
        class="md:hidden flex items-center justify-center w-10 h-10 text-white"
        aria-label="Open menu"
        aria-expanded="false"
      >
        <svg id="hamburger-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu panel -->
  <div id="mobile-menu" class="md:hidden hidden bg-green border-t border-white/10">
    <nav class="flex flex-col px-4 py-4 space-y-3">
      <a href="/programmes/" class="text-white hover:text-gray-200 transition-colors py-2">Programmes</a>
      <a href="/#about" class="text-white hover:text-gray-200 transition-colors py-2">About</a>
      <a href="/blog/" class="text-gray-100 hover:text-white transition-colors py-2">Blog</a>
      <a href="/contact/" class="text-white hover:text-gray-200 transition-colors py-2">Contact</a>
      <a href="/contact/" class="bg-secondary-600 text-white px-4 py-2 rounded-lg hover:bg-secondary-500 transition-colors text-center mt-2">
        Book a Call
      </a>
    </nav>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const hamburgerIcon = document.getElementById('hamburger-icon');
  const closeIcon = document.getElementById('close-icon');

  menuBtn?.addEventListener('click', () => {
    const isOpen = !mobileMenu?.classList.contains('hidden');
    mobileMenu?.classList.toggle('hidden');
    hamburgerIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
    menuBtn.setAttribute('aria-expanded', String(!isOpen));
  });
</script>
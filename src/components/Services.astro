---
import { getProgrammes } from '../lib/sanity.js';

let programmes;
try {
  programmes = await getProgrammes();
} catch (error) {
  console.error('Error fetching programmes:', error);
  programmes = [];
}
---

<section id="services" class="py-16 lg:py-24 bg-white section-divider">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Three ways to fix your pipeline
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Pick the path that matches where you are right now.
      </p>
    </div>

    <div class="space-y-12">
      {programmes?.map((programme) => (
        <div class="programme-group">
          <!-- Programme Header -->
          <div class="programme-header bg-gradient-to-r from-primary-50 to-secondary-50 p-6 rounded-t-lg border-l-4 border-primary-600">
            <h3 class="text-2xl font-bold text-gray-900 mb-2">{programme.title}</h3>
            <p class="text-lg text-gray-700 mb-3 italic">"{programme.problemStatement}"</p>
            {programme.targetAudience && (
              <p class="text-sm text-gray-600 mb-2">{programme.targetAudience}</p>
            )}
            <div class="flex items-center gap-4 text-sm text-gray-600">
              {programme.duration && (
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  {programme.duration}
                </span>
              )}
              {programme.investment && (
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  {programme.investment}
                </span>
              )}
            </div>
          </div>

          <!-- Services within Programme (if any) -->
          {programme.services && programme.services.length > 0 ? (
            <div class="grid md:grid-cols-2 gap-4 p-6 bg-gray-50 rounded-b-lg border border-t-0 border-gray-200">
              {programme.services.map((service) => (
                <div class="service-card bg-white p-5 rounded-lg shadow-sm hover:shadow-md transition-all duration-300 border border-gray-100">
                  <div class="mb-3">
                    <h4 class="text-lg font-semibold text-gray-900 mb-2">{service.name}</h4>
                    {service.duration && (
                      <div class="text-sm text-gray-600 mb-2">{service.duration}</div>
                    )}
                    {service.description && (
                      <p class="text-sm text-gray-600">{service.description}</p>
                    )}
                  </div>
                  {service.features && service.features.length > 0 && (
                    <ul class="space-y-1">
                      {service.features.map((feature) => (
                        <li class="text-xs text-gray-700 flex items-start">
                          <svg class="w-3 h-3 text-primary-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                          </svg>
                          {feature}
                        </li>
                      ))}
                    </ul>
                  )}
                </div>
              ))}
            </div>
          ) : (
            <div class="p-6 bg-gray-50 rounded-b-lg border border-t-0 border-gray-200 text-center">
              <a href="/contact" class="inline-block bg-secondary-600 text-white px-6 py-2 rounded-lg text-sm hover:bg-secondary-500 transition-colors">
                {programme.title === 'Fractional Demand Leadership' ? 'Discuss Fractional Leadership' : 'Book a 30-Minute Pipeline Diagnostic'}
              </a>
            </div>
          )}
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a href="/contact" class="bg-secondary-600 text-white px-8 py-3 rounded-lg text-lg hover:bg-secondary-500 transition-colors">
        Book a 30-Minute Pipeline Diagnostic
      </a>
    </div>
  </div>
</section>
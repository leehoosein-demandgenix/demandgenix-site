---
import { getRecentBlogPosts } from '../lib/sanity.js';
import { formatDate, getCategoryColor, getCategoryLabel } from '../lib/blogHelpers.js';

let recentPosts = [];
try {
  recentPosts = await getRecentBlogPosts(3);
} catch (error) {
  console.error('Error fetching recent blog posts:', error);
}
---

{recentPosts && recentPosts.length > 0 && (
  <section class="py-16 bg-white section-divider">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center mb-12">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Latest Insights</h2>
          <p class="text-gray-600">Practical demand gen strategies and B2B marketing insights</p>
        </div>
        <a href="/blog/" class="text-primary-600 hover:text-primary-700 font-medium">
          View All Articles →
        </a>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {recentPosts.map((post) => (
          <article class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
            {post.heroImage && (
              <img 
                src={post.heroImage.url} 
                alt={post.heroImage.alt}
                class="w-full h-48 object-cover"
              />
            )}
            <div class="p-6">
              <div class="flex items-center gap-2 mb-3">
                <span class={`px-2 py-1 text-xs font-medium rounded-full ${getCategoryColor(post.category)}`}>
                  {getCategoryLabel(post.category)}
                </span>
                <span class="text-sm text-gray-500">
                  {formatDate(post.publishDate)}
                </span>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                <a href={`/blog/${post.slug.current}`} class="hover:text-primary-600 transition-colors">
                  {post.title}
                </a>
              </h3>
              <p class="text-gray-600 text-sm mb-4">{post.excerpt}</p>
              <a 
                href={`/blog/${post.slug.current}`}
                class="text-primary-600 hover:text-primary-700 font-medium text-sm"
              >
                Read More →
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
)}
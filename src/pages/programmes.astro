---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';

import Footer from '../components/Footer.astro';
import PortableText from '../components/PortableText.astro';
import { getProgrammes, getProgrammesPage } from '../lib/sanity.js';

let programmes;
let programmesPage;

try {
  programmes = await getProgrammes();
  programmesPage = await getProgrammesPage();
} catch (error) {
  console.error('Error fetching data:', error);
  programmes = [];
  programmesPage = null;
}

// Separate programmes by type
const diagnostic = programmes.find(p => p.problemTag === 'diagnostic') || {};
const turnaround = programmes.find(p => p.problemTag === 'turnaround') || {};
const leadership = programmes.find(p => p.problemTag === 'leadership') || {};

// Extract plain text from Sanity Portable Text blocks
function toPlainText(blocks) {
  if (!blocks || typeof blocks === 'string') return blocks || '';
  return blocks
    .map(block => (block.children || []).map(child => child.text || '').join(''))
    .join(' ')
    .replace(/\s+/g, ' ')
    .trim();
}

// Create lozenges from programmes
const lozenges = programmes.map(p => ({
  label: p.lozengeLabel || p.title,
  anchor: `#${p.problemTag}`,
  icon: p.lozengeIcon
}));
---

<Layout
  title={programmesPage?.metaTitle || "Programmes | DemandGenix - Pipeline Solutions for B2B Growth"}
  description={programmesPage?.metaDescription || "Fix your pipeline with our proven programmes: Pipeline Diagnostic, Pipeline Turnaround sprints, or Fractional Demand Leadership. Choose the right path for your growth stage."}
  keywords={programmesPage?.metaKeywords}
  ogImage={programmesPage?.ogImage}
>
  <script type="application/ld+json" slot="head" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Service",
    "serviceType": "Demand Generation Consulting",
    "name": "Demand Generation Programmes",
    "description": "Strategic consulting for B2B companies looking to transition from lead generation to demand generation.",
    "url": "https://demandgenix.uk/programmes/",
    "provider": {
      "@type": "ProfessionalService",
      "name": "DemandGenix",
      "url": "https://demandgenix.uk"
    },
    "areaServed": {
      "@type": "Country",
      "name": "United Kingdom"
    },
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Demand Generation Programmes",
      "itemListElement": [
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": diagnostic.title || "Pipeline Diagnostic",
            "description": toPlainText(diagnostic.detailedDescription) || "Audit your current pipeline to identify what's working and what's not."
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": turnaround.title || "Pipeline Turnaround",
            "description": toPlainText(turnaround.detailedDescription) || "Fixed-scope sprints to restructure and accelerate your demand pipeline."
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": leadership.title || "Fractional Demand Leadership",
            "description": toPlainText(leadership.detailedDescription) || "Embedded demand generation leadership for companies scaling without a full-time hire."
          }
        }
      ]
    }
  })}></script>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="hero-bg py-20 lg:py-28">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
          {programmesPage?.heroHeading || 'Programmes designed around your pipeline problems'}
        </h1>
        <p class="text-xl text-gray-600 mb-10 max-w-3xl mx-auto">
          {programmesPage?.heroSubheading || 'Every engagement starts with a clear problem and ends with a measurable outcome. Choose the path that fits where you are.'}
        </p>

        {/* Path Finder Cards */}
        <div class="pathfinder-stack">
          <a href="#diagnostic" class="pathfinder-card" data-accent="green">
            <div class="pathfinder-card__content">
              <span class="pathfinder-card__title">"I don't know what's working"</span>
              <span class="pathfinder-card__subtitle">Pipeline Diagnostic</span>
            </div>
            <svg class="pathfinder-card__arrow" width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7 4l6 6-6 6"/>
            </svg>
          </a>
          <a href="#turnaround" class="pathfinder-card" data-accent="orange">
            <div class="pathfinder-card__content">
              <span class="pathfinder-card__title">"I know what's broken — fix it"</span>
              <span class="pathfinder-card__subtitle">Pipeline Turnaround</span>
            </div>
            <svg class="pathfinder-card__arrow" width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7 4l6 6-6 6"/>
            </svg>
          </a>
          <a href="#leadership" class="pathfinder-card" data-accent="blue">
            <div class="pathfinder-card__content">
              <span class="pathfinder-card__title">"I need senior leadership now"</span>
              <span class="pathfinder-card__subtitle">Fractional Demand Leadership</span>
            </div>
            <svg class="pathfinder-card__arrow" width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7 4l6 6-6 6"/>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Journey Indicator -->
    <div class="journey-indicator">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="journey-flow">
          <div class="journey-node" data-colour="green">
            <div class="journey-dot journey-dot--green"></div>
            <span class="journey-label">Diagnose</span>
            <span class="journey-sublabel">Diagnostic</span>
          </div>
          <div class="journey-connector"></div>
          <div class="journey-node" data-colour="orange">
            <div class="journey-dot journey-dot--orange"></div>
            <span class="journey-label">Fix</span>
            <span class="journey-sublabel">Turnaround</span>
          </div>
          <div class="journey-connector"></div>
          <div class="journey-node" data-colour="blue">
            <div class="journey-dot journey-dot--blue"></div>
            <span class="journey-label">Scale</span>
            <span class="journey-sublabel">Fractional Leadership</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Programme Sub-Navigation (sticky) -->
    <nav class="programme-subnav" id="programme-subnav" aria-label="Programme navigation">
      <a href="#diagnostic" class="programme-subnav__link programme-subnav__link--green" data-section="diagnostic">Pipeline Diagnostic</a>
      <a href="#turnaround" class="programme-subnav__link programme-subnav__link--orange" data-section="turnaround">Pipeline Turnaround</a>
      <a href="#leadership" class="programme-subnav__link programme-subnav__link--blue" data-section="leadership">Fractional Leadership</a>
    </nav>

    <!-- Dark Programme Content Area -->
    <div class="programmes-content">
      <div class="atmosphere-blob atmosphere-blob--orange" aria-hidden="true"></div>

      <!-- Pipeline Diagnostic Section -->
      {diagnostic.title && (
        <section id="diagnostic" class="prog-area">
          <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="programme-section" data-accent="green">

              {/* Start Here Badge */}
              <div class="programme-badge">Most Companies Start Here</div>

              {/* Header */}
              <div class="mb-8">
                {diagnostic.solutionLabel && (
                  <div class="prog-label">
                    {diagnostic.solutionLabel}
                  </div>
                )}
                <h2 class="prog-h2">
                  {diagnostic.title}
                </h2>
                {diagnostic.problemQuote && (
                  <p class="prog-quote">"{diagnostic.problemQuote}"</p>
                )}
              </div>

              {/* Description */}
              {diagnostic.detailedDescription && (
                <div class="prog-body mb-8">
                  <PortableText content={diagnostic.detailedDescription} />
                </div>
              )}

              {/* Process Steps Timeline */}
              {diagnostic.processSteps && diagnostic.processSteps.length > 0 && (
                <div class="mb-12">
                  <h3 class="prog-h3">The Process</h3>

                  {/* Mobile: vertical timeline */}
                  <div class="md:hidden relative pl-8">
                    <div class="absolute left-6 top-6 bottom-6 w-0.5" style="background: rgba(255,255,255,0.1);"></div>
                    <div class="space-y-8">
                      {diagnostic.processSteps.map((step, index) => (
                        <div class="relative">
                          <div class="absolute -left-8 w-12 h-12 rounded-full flex items-center justify-center font-bold text-lg z-10" style="background: #4A9B7F; color: white;">
                            {index + 1}
                          </div>
                          <div class="pl-8 pt-1">
                            {step.week && (
                              <div class="prog-label mb-1">{step.week}</div>
                            )}
                            <h4 class="font-bold text-white mb-1">{step.title}</h4>
                            {step.description && (
                              <p class="text-sm" style="color: rgba(255,255,255,0.6);">{step.description}</p>
                            )}
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>

                  {/* Desktop: horizontal timeline */}
                  <div class="hidden md:block relative">
                    <div class="absolute top-6 left-0 w-full h-1 rounded" style="background: rgba(255,255,255,0.08);"></div>
                    <div class="grid grid-cols-3 gap-6">
                      {diagnostic.processSteps.map((step, index) => (
                        <div class="relative">
                          <div class="flex items-center mb-3">
                            <div class="w-12 h-12 rounded-full flex items-center justify-center font-bold text-lg z-10" style="background: #4A9B7F; color: white;">
                              {index + 1}
                            </div>
                          </div>
                          <div>
                            {step.week && (
                              <div class="prog-label mb-1">{step.week}</div>
                            )}
                            <h4 class="font-bold text-white mb-1">{step.title}</h4>
                            {step.description && (
                              <p class="text-sm" style="color: rgba(255,255,255,0.6);">{step.description}</p>
                            )}
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>
                </div>
              )}

              {/* Duration & Investment Badges */}
              <div class="programme-meta">
                {diagnostic.duration && (
                  <div class="programme-meta__item">
                    <span class="programme-meta__label">Duration</span>
                    <span class="programme-meta__value">
                      {diagnostic.duration}
                      {diagnostic.durationSubtext && (
                        <span class="prog-label ml-2" style="font-size: 0.8rem;">{diagnostic.durationSubtext}</span>
                      )}
                    </span>
                  </div>
                )}
                {diagnostic.investment && (
                  <div class="programme-meta__item">
                    <span class="programme-meta__label">Investment</span>
                    <span class="programme-meta__value">{diagnostic.investment}</span>
                  </div>
                )}
              </div>

              {/* Deliverables Grid */}
              {diagnostic.deliverables && diagnostic.deliverables.length > 0 && (
                <div class="mb-10">
                  <h3 class="prog-h3">What You'll Receive</h3>
                  <div class="deliverables-grid">
                    {diagnostic.deliverables.map((item) => (
                      <div class="deliverables-grid__item">
                        <svg class="w-5 h-5 flex-shrink-0" style="color: var(--prog-green);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        <span>{item}</span>
                      </div>
                    ))}
                  </div>
                </div>
              )}

              {/* Expected Outcome */}
              {diagnostic.outcome && (
                <div class="prog-outcome prog-outcome--green">
                  <h3 class="text-lg font-bold text-white mb-2">Expected Outcome</h3>
                  <div class="prog-body">
                    <PortableText content={diagnostic.outcome} />
                  </div>
                </div>
              )}

              {/* CTA */}
              <div class="text-center">
                <a
                  href="/contact"
                  class="prog-cta-btn"
                >
                  Book Your Diagnostic — £3,500
                </a>
                <p class="prog-cta-subtext">
                  {diagnostic.ctaDescriptor || "We'll map your biggest leak and recommend a next step."}
                </p>
                <a href="/contact" class="cta-secondary">Have questions? Let's talk</a>
              </div>
            </div>
          </div>
        </section>
      )}

      <!-- Pipeline Turnaround Section -->
      {turnaround.title && (
        <section id="turnaround" class="prog-area prog-area--alt">
          <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="programme-section programme-section--alt" data-accent="orange">

              {/* Header */}
              <div class="mb-10">
                {turnaround.solutionLabel && (
                  <div class="prog-label">
                    {turnaround.solutionLabel}
                  </div>
                )}
                <h2 class="prog-h2">
                  {turnaround.title}
                </h2>
                {turnaround.problemQuote && (
                  <p class="prog-quote">"{turnaround.problemQuote}"</p>
                )}
                {turnaround.detailedDescription && (
                  <div class="prog-body mb-8">
                    <PortableText content={turnaround.detailedDescription} />
                  </div>
                )}

                {/* Duration & Investment Badges */}
                <div class="programme-meta">
                  {turnaround.duration && (
                    <div class="programme-meta__item">
                      <span class="programme-meta__label">Duration</span>
                      <span class="programme-meta__value">{turnaround.duration}</span>
                    </div>
                  )}
                  {turnaround.investment && (
                    <div class="programme-meta__item">
                      <span class="programme-meta__label">Investment per Sprint</span>
                      <span class="programme-meta__value">{turnaround.investment}</span>
                    </div>
                  )}
                </div>
              </div>

              {/* Sprint Card Grid (Phase 2) */}
              {turnaround.sprintDetails && turnaround.sprintDetails.length > 0 && (
                <div>
                  <h3 class="prog-h3">Available Sprints</h3>

                  <div class="sprint-grid">
                    {turnaround.sprintDetails.map((sprint, index) => (
                      <div class="sprint-card" data-sprint-index={index}>
                        <h4 class="sprint-card__title">{sprint.name}</h4>
                        {sprint.problem && (
                          <p class="sprint-card__summary">{sprint.problem.split('.')[0]}?</p>
                        )}
                        <button
                          class="sprint-card__toggle"
                          data-sprint-toggle={index}
                          aria-expanded="false"
                          aria-controls={`sprint-detail-${index}`}
                        >
                          View Details
                          <svg class="sprint-card__arrow" width="12" height="12" viewBox="0 0 12 12" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M2 4l4 4 4-4"/>
                          </svg>
                        </button>

                        <div class="sprint-detail-panel" id={`sprint-detail-${index}`} data-sprint-detail={index}>
                          <div class="sprint-detail-panel__inner">
                            {sprint.problem && (
                              <div class="mb-4">
                                <div class="sprint-detail__label">Problem</div>
                                <p class="prog-body">{sprint.problem}</p>
                              </div>
                            )}

                            {sprint.deliverables && sprint.deliverables.length > 0 && (
                              <div class="mb-4">
                                <div class="sprint-detail__label">Deliverables</div>
                                <ul class="sprint-detail__list">
                                  {sprint.deliverables.map((item) => (
                                    <li>
                                      <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #E8845C;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                      </svg>
                                      <span>{item}</span>
                                    </li>
                                  ))}
                                </ul>
                              </div>
                            )}

                            {sprint.outcome && (
                              <div class="sprint-detail__outcome">
                                <div class="sprint-detail__label">Outcome</div>
                                <p class="text-white font-medium">{sprint.outcome}</p>
                              </div>
                            )}
                          </div>
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              )}

              {/* CTA */}
              <div class="text-center mt-12">
                <a
                  href="/contact"
                  class="prog-cta-btn"
                >
                  Discuss Your Turnaround Sprint
                </a>
                <p class="prog-cta-subtext">
                  Tell us which pipeline problem to fix. We'll scope a sprint.
                </p>
                <a href="/contact" class="cta-secondary">Not sure which sprint? Start with a Diagnostic</a>
              </div>
            </div>
          </div>
        </section>
      )}

      <!-- Case Study Spotlight -->
      <section class="cs-spotlight" id="case-study-spotlight">
        <div class="cs-spotlight__border cs-spotlight__border--top" aria-hidden="true"></div>
        <div class="cs-spotlight__noise" aria-hidden="true"></div>

        <div class="cs-spotlight__grid">
          {/* Left Column: Copy */}
          <div class="cs-spotlight__copy">
            <div class="cs-eyebrow">
              <span class="cs-eyebrow__dot" aria-hidden="true"></span>
              Case Study
            </div>

            <h2 class="cs-headline">
              From 'Spray and Pray' to <span class="cs-headline__accent">111% Pipeline Growth</span>
            </h2>

            <p class="cs-subtext">
              How we stopped guessing and used intent data to target just 140 accounts — doubling pipeline value in a single quarter.
            </p>

            <div class="cs-stats">
              <div class="cs-stat">
                <span class="cs-stat__value">111%</span>
                <span class="cs-stat__label">Pipeline increase</span>
              </div>
              <div class="cs-stat">
                <span class="cs-stat__value">140</span>
                <span class="cs-stat__label">Accounts targeted</span>
              </div>
              <div class="cs-stat">
                <span class="cs-stat__value">1 Qtr</span>
                <span class="cs-stat__label">Turnaround time</span>
              </div>
            </div>

            <a href="https://demandgenix.uk/blog/case-study-how-we-doubled-pipeline-by-leveraging-intent-data/" class="cs-cta" target="_blank" rel="noopener noreferrer">
              Read the Full Case Study
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5" class="cs-cta__arrow">
                <path d="M3 8h10M9 4l4 4-4 4"/>
              </svg>
            </a>
          </div>

          {/* Right Column: Data Visualisation */}
          <div class="cs-chart-wrapper">
            <svg class="cs-chart" viewBox="0 0 500 320" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="Stylised growth chart showing 111% pipeline increase">
              {/* Grid lines */}
              <line x1="50" y1="40" x2="470" y2="40" stroke="rgba(255,255,255,0.04)" stroke-width="1"/>
              <line x1="50" y1="100" x2="470" y2="100" stroke="rgba(255,255,255,0.04)" stroke-width="1"/>
              <line x1="50" y1="160" x2="470" y2="160" stroke="rgba(255,255,255,0.04)" stroke-width="1"/>
              <line x1="50" y1="220" x2="470" y2="220" stroke="rgba(255,255,255,0.04)" stroke-width="1"/>
              <line x1="50" y1="280" x2="470" y2="280" stroke="rgba(255,255,255,0.04)" stroke-width="1"/>

              {/* Vertical intent signal lines */}
              <line x1="190" y1="30" x2="190" y2="290" stroke="rgba(74,155,127,0.12)" stroke-width="1" stroke-dasharray="3 6"/>
              <line x1="330" y1="30" x2="330" y2="290" stroke="rgba(74,155,127,0.08)" stroke-width="1" stroke-dasharray="3 6"/>

              {/* Area fill gradient */}
              <defs>
                <linearGradient id="areaGrad" x1="0" y1="0" x2="0" y2="1">
                  <stop offset="0%" stop-color="#4A9B7F" stop-opacity="0.15"/>
                  <stop offset="100%" stop-color="#4A9B7F" stop-opacity="0"/>
                </linearGradient>
                <filter id="glowFilter">
                  <feGaussianBlur stdDeviation="4" result="blur"/>
                  <feMerge>
                    <feMergeNode in="blur"/>
                    <feMergeNode in="SourceGraphic"/>
                  </feMerge>
                </filter>
              </defs>

              {/* Area fill */}
              <path class="cs-chart__area" d="M70,250 C110,248 150,245 190,230 C230,200 280,130 330,90 C370,65 420,52 450,48 L450,280 L70,280 Z" fill="url(#areaGrad)"/>

              {/* Glow line */}
              <path class="cs-chart__glow" d="M70,250 C110,248 150,245 190,230 C230,200 280,130 330,90 C370,65 420,52 450,48" stroke="#4A9B7F" stroke-width="5" stroke-opacity="0.3" stroke-linecap="round" filter="url(#glowFilter)"/>

              {/* Main growth line */}
              <path class="cs-chart__line" d="M70,250 C110,248 150,245 190,230 C230,200 280,130 330,90 C370,65 420,52 450,48" stroke="#4A9B7F" stroke-width="2.5" stroke-linecap="round" style="filter: drop-shadow(0 0 6px rgba(74, 155, 127, 0.4));"/>

              {/* Data point dots */}
              <circle class="cs-chart__dot cs-chart__dot--1" cx="70" cy="250" r="4" fill="#4A9B7F"/>
              <circle class="cs-chart__dot cs-chart__dot--1" cx="70" cy="250" r="7" fill="none" stroke="#4A9B7F" stroke-width="1" stroke-opacity="0.3"/>
              <circle class="cs-chart__dot cs-chart__dot--2" cx="190" cy="230" r="4" fill="#4A9B7F"/>
              <circle class="cs-chart__dot cs-chart__dot--2" cx="190" cy="230" r="7" fill="none" stroke="#4A9B7F" stroke-width="1" stroke-opacity="0.3"/>
              <circle class="cs-chart__dot cs-chart__dot--3" cx="330" cy="90" r="4" fill="#4A9B7F"/>
              <circle class="cs-chart__dot cs-chart__dot--3" cx="330" cy="90" r="7" fill="none" stroke="#4A9B7F" stroke-width="1" stroke-opacity="0.3"/>
              <circle class="cs-chart__dot cs-chart__dot--4" cx="450" cy="48" r="4" fill="#4A9B7F"/>
              <circle class="cs-chart__dot cs-chart__dot--4" cx="450" cy="48" r="7" fill="none" stroke="#4A9B7F" stroke-width="1" stroke-opacity="0.3"/>

              {/* X-axis labels */}
              <text x="70" y="305" fill="rgba(255,255,255,0.3)" font-size="10" text-anchor="middle">Q-1</text>
              <text x="190" y="305" fill="rgba(255,255,255,0.3)" font-size="10" text-anchor="middle">Intent activated</text>
              <text x="330" y="305" fill="rgba(255,255,255,0.3)" font-size="10" text-anchor="middle">Mid-quarter</text>
              <text x="450" y="305" fill="rgba(255,255,255,0.3)" font-size="10" text-anchor="middle">Q End</text>
            </svg>

            {/* Floating Annotations */}
            <div class="cs-annotation cs-annotation--baseline">
              <span class="cs-annotation__value">Baseline</span>
              <span class="cs-annotation__label">Spray & pray</span>
            </div>
            <div class="cs-annotation cs-annotation--mid">
              <span class="cs-annotation__value">140</span>
              <span class="cs-annotation__label">Accounts activated</span>
            </div>
            <div class="cs-annotation cs-annotation--peak">
              <span class="cs-annotation__value">+111%</span>
              <span class="cs-annotation__label">Pipeline value</span>
            </div>
          </div>
        </div>

        <div class="cs-spotlight__border cs-spotlight__border--bottom" aria-hidden="true"></div>
      </section>

      <!-- Fractional Demand Leadership Section -->
      {leadership.title && (
        <section id="leadership" class="prog-area">
          <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="programme-section" data-accent="blue">

              {/* Header */}
              <div class="mb-10">
                {leadership.solutionLabel && (
                  <div class="prog-label">
                    {leadership.solutionLabel}
                  </div>
                )}
                <h2 class="prog-h2">
                  {leadership.title}
                </h2>
                {leadership.problemQuote && (

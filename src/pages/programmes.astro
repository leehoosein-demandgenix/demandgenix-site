<script>
  document.addEventListener('DOMContentLoaded', () => {
    // ===== Sprint Card Expand/Collapse =====
    const toggleButtons = document.querySelectorAll('[data-sprint-toggle]');

    toggleButtons.forEach((btn) => {
      btn.addEventListener('click', () => {
        const index = btn.getAttribute('data-sprint-toggle');
        const panel = document.getElementById(`sprint-detail-${index}`);
        const isOpen = btn.getAttribute('aria-expanded') === 'true';

        // Close all other panels first
        toggleButtons.forEach((otherBtn) => {
          const otherIndex = otherBtn.getAttribute('data-sprint-toggle');
          const otherPanel = document.getElementById(`sprint-detail-${otherIndex}`);
          otherBtn.setAttribute('aria-expanded', 'false');
          otherPanel?.classList.remove('open');
        });

        // Toggle current panel
        if (!isOpen) {
          btn.setAttribute('aria-expanded', 'true');
          panel?.classList.add('open');
        }
      });
    });

    // ===== Sub-Nav Visibility: show after journey indicator scrolls out =====
    const subnav = document.getElementById('programme-subnav');
    const journeyIndicator = document.querySelector('.journey-indicator');

    if (subnav && journeyIndicator) {
      const visibilityObserver = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            // Show subnav when journey indicator is NOT visible
            subnav.classList.toggle('programme-subnav--visible', !entry.isIntersecting);
          });
        },
        {
          rootMargin: '-64px 0px 0px 0px', /* account for sticky header height */
          threshold: 0
        }
      );

      visibilityObserver.observe(journeyIndicator);
    }

    // ===== Sticky Sub-Nav: Active State Tracking =====
    const sections = document.querySelectorAll('.prog-area');
    const navLinks = document.querySelectorAll('.programme-subnav__link');

    if (sections.length > 0 && navLinks.length > 0) {
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              const sectionId = entry.target.id;
              navLinks.forEach((link) => {
                link.classList.toggle('active', link.getAttribute('data-section') === sectionId);
              });
            }
          });
        },
        {
          rootMargin: '-140px 0px -60% 0px',
          threshold: 0
        }
      );

      sections.forEach((section) => observer.observe(section));
    }

    // ===== Case Study Spotlight: scroll-triggered animations =====
    const csSpotlight = document.getElementById('case-study-spotlight');
    if (csSpotlight) {
      const csObserver = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              csSpotlight.classList.add('cs-animated');
              csObserver.unobserve(csSpotlight);
            }
          });
        },
        { threshold: 0.15 }
      );
      csObserver.observe(csSpotlight);
    }

    // ===== Smooth Scroll for Sub-Nav =====
    navLinks.forEach((link) => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = link.getAttribute('href')?.substring(1);
        const target = document.getElementById(targetId || '');
        if (target) {
          target.scrollIntoView({ behavior: 'smooth' });
        }
      });
    });
  });
</script>

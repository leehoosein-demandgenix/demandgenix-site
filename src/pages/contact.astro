---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CookieConsent from '../components/CookieConsent.astro';
---

<Layout 
  title="Contact DemandGenix | Free Demand Gen Consultation"
  description="Get in touch with DemandGenix for a free 30-minute demand generation consultation. Book a call or send us a message today."
>
  <Header />
  <main class="py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Ready to scale your demand gen?
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          Let's figure out what's holding you back and build a plan that scales with your business. 
          Quick 30-minute diagnostic call to get started (no MBA required).
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
          <a href="#contact-form" class="bg-primary-600 text-white px-8 py-3 rounded-lg text-lg hover:bg-primary-700 transition-colors">
            Book Your Free Consultation
          </a>
      
        </div>
      </div>

      <div class="grid lg:grid-cols-2 gap-16 items-start">
        <!-- Contact Form -->
        <div id="contact-form" class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-2">Get in Touch</h2>
          <p class="text-gray-600 mb-6">
            Fill out the form below and we'll get back to you within 24 hours.
          </p>
          
          <!-- HubSpot Form Container -->
          <div id="hubspot-form-container">
            <!-- Form will be loaded here by HubSpot script -->
            <div class="animate-pulse">
              <div class="space-y-4">
                <div class="h-4 bg-gray-200 rounded w-1/4"></div>
                <div class="h-10 bg-gray-200 rounded"></div>
                <div class="h-4 bg-gray-200 rounded w-1/4"></div>
                <div class="h-10 bg-gray-200 rounded"></div>
                <div class="h-4 bg-gray-200 rounded w-1/4"></div>
                <div class="h-10 bg-gray-200 rounded"></div>
                <div class="h-4 bg-gray-200 rounded w-1/4"></div>
                <div class="h-24 bg-gray-200 rounded"></div>
                <div class="h-10 bg-primary-200 rounded"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Information -->
        <div class="space-y-8">
          <!-- Contact Details -->
          <div class="bg-gray-50 rounded-lg p-8">
            <h3 class="text-xl font-semibold text-gray-900 mb-6">Get in Touch</h3>
            <div class="space-y-6">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary-600 mr-4 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <div>
                  <h4 class="font-medium text-gray-900">Email</h4>
                  <p class="text-gray-600">hello@demandgenix.uk</p>
                  <p class="text-sm text-gray-500 mt-1">We typically respond within 2-4 hours</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary-600 mr-4 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div>
                  <h4 class="font-medium text-gray-900">Location</h4>
                  <p class="text-gray-600">Manchester, UK</p>
                  <p class="text-sm text-gray-500 mt-1">Serving UK, EU & US remotely</p>
                </div>
              </div>

              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary-600 mr-4 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div>
                  <h4 class="font-medium text-gray-900">Response Time</h4>
                  <p class="text-gray-600">Within 24 hours</p>
                  <p class="text-sm text-gray-500 mt-1">Usually much faster during UK business hours</p>
                </div>
              </div>
            </div>
          </div>

          <!-- What to Expect -->
          <div class="bg-primary-50 rounded-lg p-8">
            <h3 class="text-xl font-semibold text-gray-900 mb-6">What to Expect</h3>
            <div class="space-y-4">
              <div class="flex items-start">
                <div class="flex-shrink-0 w-6 h-6 bg-primary-600 text-white rounded-full flex items-center justify-center text-sm font-medium mr-3 mt-0.5">1</div>
                <div>
                  <h4 class="font-medium text-gray-900">Quick Response</h4>
                  <p class="text-sm text-gray-600">We'll get back to you within 24 hours (usually much faster)</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="flex-shrink-0 w-6 h-6 bg-primary-600 text-white rounded-full flex items-center justify-center text-sm font-medium mr-3 mt-0.5">2</div>
                <div>
                  <h4 class="font-medium text-gray-900">Discovery Call</h4>
                  <p class="text-sm text-gray-600">30-minute call to understand your challenges and goals</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="flex-shrink-0 w-6 h-6 bg-primary-600 text-white rounded-full flex items-center justify-center text-sm font-medium mr-3 mt-0.5">3</div>
                <div>
                  <h4 class="font-medium text-gray-900">Tailored Proposal</h4>
                  <p class="text-sm text-gray-600">Custom proposal with clear outcomes and transparent pricing</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
  <CookieConsent />
</Layout>

<!-- HubSpot Form Loading Script -->
<script>
  // Function to check if marketing cookies are accepted and load HubSpot form
  function checkAndLoadHubSpotForm() {
    const marketingConsent = document.cookie.split('; ').find(row => row.startsWith('marketing-consent='))?.split('=')[1];
    
    if (marketingConsent === 'true') {
      loadHubSpotForm();
    } else {
      showConsentMessage();
    }
  }

  function loadHubSpotForm() {
    // Replace with your actual HubSpot form details
    window.hbspt?.forms?.create({
      region: "eu1", // or "na1" for North America
      portalId: "146805802",
      formId: "2e5d9771-a003-488e-a7d3-87aeb942301c",
      target: "#hubspot-form-container",
      css: `
        .hs-form fieldset {
          max-width: none !important;
        }
        .hs-form .hs-form-field {
          margin-bottom: 1.5rem;
        }
        .hs-form .hs-form-field label {
          font-weight: 500;
          color: #374151;
          margin-bottom: 0.5rem;
          display: block;
        }
        .hs-form .hs-input {
          width: 100% !important;
          padding: 0.75rem !important;
          border: 1px solid #d1d5db !important;
          border-radius: 0.5rem !important;
          font-size: 1rem !important;
          line-height: 1.5 !important;
          background-color: #fff !important;
        }
        .hs-form .hs-input:focus {
          outline: none !important;
          border-color: var(--color-primary-600) !important;
          box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1) !important;
        }
        .hs-form textarea.hs-input {
          min-height: 6rem !important;
          resize: vertical !important;
        }
        .hs-form .hs-button {
          background-color: var(--color-primary-600) !important;
          color: white !important;
          border: none !important;
          padding: 0.75rem 2rem !important;
          border-radius: 0.5rem !important;
          font-size: 1rem !important;
          font-weight: 500 !important;
          cursor: pointer !important;
          transition: background-color 0.2s ease !important;
        }
        .hs-form .hs-button:hover {
          background-color: var(--color-primary-700) !important;
        }
        .hs-form .hs-error-msgs {
          margin-top: 0.25rem;
        }
        .hs-form .hs-error-msg {
          color: #dc2626 !important;
          font-size: 0.875rem !important;
        }
        .hs-form .hs-form-required {
          color: #dc2626;
        }
      `
    });
  }

  function showConsentMessage() {
    document.getElementById('hubspot-form-container').innerHTML = `
      <div class="text-center p-8 bg-gray-50 rounded-lg">
        <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Cookie Consent Required</h3>
        <p class="text-gray-600 mb-4">
          To display our contact form, we need your consent to use marketing cookies for form functionality and lead tracking.
        </p>
        <button onclick="document.getElementById('cookie-modal').classList.remove('hidden')" 
                class="bg-primary-600 text-white px-6 py-2 rounded-lg hover:bg-primary-700 transition-colors">
          Manage Cookie Settings
        </button>
        <div class="mt-4 pt-4 border-t border-gray-200">
          <p class="text-sm text-gray-500 mb-2">Or contact us directly:</p>
          <a href="mailto:hello@demandgenix.uk" class="text-primary-600 hover:underline">hello@demandgenix.uk</a>
        </div>
      </div>
    `;
  }

  // Check for existing consent when page loads
  document.addEventListener('DOMContentLoaded', function() {
    // Check if HubSpot script is available
    if (window.hbspt) {
      checkAndLoadHubSpotForm();
    } else {
      // Wait for HubSpot script to load
      const checkHubSpot = setInterval(() => {
        if (window.hbspt) {
          clearInterval(checkHubSpot);
          checkAndLoadHubSpotForm();
        }
      }, 500);
    }
  });

  // Listen for cookie consent changes
  document.addEventListener('cookie-consent-changed', function() {
    checkAndLoadHubSpotForm();
  });
</script>
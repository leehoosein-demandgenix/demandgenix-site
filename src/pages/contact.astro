          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
  <CookieConsent />
</Layout>

<!-- HubSpot Form Loading Script -->
<script>
  let hubspotFormLoaded = false;

  function getCookie(name) {
    return document.cookie.split('; ').find(row => row.startsWith(name + '='))?.split('=')[1];
  }

  function checkAndLoadHubSpotForm() {
    const marketingConsent = getCookie('marketing-consent');
    console.log('Marketing consent:', marketingConsent);
    
    if (marketingConsent === 'true') {
      loadHubSpotFormScript();
    } else {
      showConsentMessage();
    }
  }

  function loadHubSpotFormScript() {
    if (hubspotFormLoaded) return;
    
    console.log('Loading HubSpot Forms script directly...');
    
    // Load the HubSpot Forms API script directly
    const script = document.createElement('script');
    script.src = 'https://js.hsforms.net/forms/embed/v2.js';
    script.async = true;
    document.head.appendChild(script);
    
    script.onload = () => {
      console.log('HubSpot Forms script loaded');
      // Wait a moment for the API to initialize
      setTimeout(() => {
        if (window.hbspt && window.hbspt.forms) {
          createHubSpotForm();
        } else {
          console.error('HubSpot forms API not available');
          showErrorMessage();
        }
      }, 500);
    };
    
    script.onerror = () => {
      console.error('Failed to load HubSpot Forms script');
      showErrorMessage();
    };
  }

  function createHubSpotForm() {
  console.log('Creating HubSpot form...');
  
  // Clear the container completely
  const container = document.getElementById('hubspot-form-container');
  container.innerHTML = '';
  
  try {
    window.hbspt.forms.create({
      region: "eu1",
      portalId: "146805802", 
      formId: "2e5d9771-a003-488e-a7d3-87aeb942301c",
      target: "#hubspot-form-container",
      onFormReady: function() {
        console.log('HubSpot form loaded successfully!');
        hubspotFormLoaded = true;
      },
      // ... rest of your CSS and config
    });
  } catch (error) {
    console.error('Error creating HubSpot form:', error);
    showErrorMessage();
  }
}


  function showConsentMessage() {
    document.getElementById('hubspot-form-container').innerHTML = `
      <div class="text-center p-8 bg-gray-50 rounded-lg">
        <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Cookie Consent Required</h3>
        <p class="text-gray-600 mb-4">
          To display our contact form, we need your consent to use marketing cookies for form functionality and lead tracking.
        </p>
        <button onclick="document.getElementById('cookie-modal').classList.remove('hidden')" 
                class="bg-primary-600 text-white px-6 py-2 rounded-lg hover:bg-primary-700 transition-colors">
          Manage Cookie Settings
        </button>
        <div class="mt-4 pt-4 border-t border-gray-200">
          <p class="text-sm text-gray-500 mb-2">Or contact us directly:</p>
          <a href="mailto:hello@demandgenix.uk" class="text-primary-600 hover:underline">hello@demandgenix.uk</a>
        </div>
      </div>
    `;
  }

  function showErrorMessage() {
    document.getElementById('hubspot-form-container').innerHTML = `
      <div class="text-center p-8 bg-red-50 rounded-lg">
        <svg class="w-12 h-12 text-red-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <h3 class="text-lg font-medium text-red-900 mb-2">Form Loading Error</h3>
        <p class="text-red-600 mb-4">
          We're having trouble loading our contact form. Please contact us directly:
        </p>
        <a href="mailto:hello@demandgenix.uk" class="bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 transition-colors">
          Send Email Instead
        </a>
      </div>
    `;
  }

  // Initialize when page loads
  document.addEventListener('DOMContentLoaded', function() {
    console.log('Page loaded, checking form status...');
    checkAndLoadHubSpotForm();
  });

  // Listen for cookie consent changes
  window.addEventListener('cookie-consent-changed', function() {
    console.log('Cookie consent changed, reloading form...');
    checkAndLoadHubSpotForm();
  });
</script>

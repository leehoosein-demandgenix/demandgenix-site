---
import CookieConsent from '../components/CookieConsent.astro';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  canonicalUrl?: string;
}

const { 
  title, 
  description = "Manchester-based demand gen consultancy helping growing companies scale efficiently. Fixed-scope sprints, fractional leadership, AI utilization.", 
  keywords = "demand generation, B2B marketing, SaaS marketing, conversion optimization, fractional marketing, Manchester marketing agency, AI marketing, growth marketing, marketing analytics",
  ogImage = "/og-image.jpg",
  canonicalUrl
} = Astro.props;

// Fix canonical URL to always use production domain
const SITE_URL = "https://demandgenix.uk";
const finalCanonicalUrl = canonicalUrl || `${SITE_URL}${Astro.url.pathname}`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Preconnect to analytics domains -->
    <link rel="preconnect" href="https://stats.g.doubleclick.net" crossorigin>
    <link rel="dns-prefetch" href="https://stats.g.doubleclick.net">
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="DemandGenix Limited" />
    
    <!-- Geographic Meta -->
    <meta name="geo.region" content="GB-MAN" />
    <meta name="geo.placename" content="Manchester" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${SITE_URL}${ogImage}`} />
    <meta property="og:url" content={finalCanonicalUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="DemandGenix" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${SITE_URL}${ogImage}`} />

    <!-- Theme color for mobile browsers -->
    <meta name="theme-color" content="#059669">
    <meta name="msapplication-TileColor" content="#059669">
    
    <!-- iOS specific -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="apple-mobile-web-app-title" content="DemandGenix">
    
    <!-- Canonical URL -->
    <link rel="canonical" href={finalCanonicalUrl} />

    <!-- Standard favicon -->
    <link rel="icon" href="/favicon.ico" sizes="32x32">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
  
    <!-- Apple -->
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  
    <!-- Android -->
    <link rel="manifest" href="/manifest.json">
    
   <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "DemandGenix Limited",
      "url": SITE_URL,
      "description": description,
      "contactPoint": {
        "@type": "ContactPoint",
        "email": "hello@demandgenix.uk",
        "contactType": "customer service"
      }
    })} />
  
    <!-- Preload critical fonts -->
    <link rel="preload" href="/fonts/plus-jakarta-sans-v12-latin-regular.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/plus-jakarta-sans-v12-latin-700.woff2" as="font" type="font/woff2" crossorigin>
    <script>
      // Add class when fonts are loaded
      document.fonts.ready.then(() => {
        document.documentElement.classList.add('fonts-loaded');
      });
    </script>
  </head>
  
  <body class="font-sans">
    <slot />
    <noscript>
  <img height="1" width="1" style="display:none;" alt="" src="https://px.ads.linkedin.com/collect/?pid=8301826&fmt=gif" />
</noscript>
    <CookieConsent />
    <script src="https://static.claydar.com/init.v1.js?id=cgiqWQbLzO"></script>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>